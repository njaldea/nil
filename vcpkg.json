{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
    "description": "Collection of libraries from nil",
    "name": "nil-mono",
    "dependencies": [
        {
            "name": "nil",
            "features": ["gate", "clix", "service"]
        },
        {
            "name": "protobuf",
            "version>=": "3.21.12"
        }
    ],
    "features": {
        "pulse": {
            "description": "straight forward implementation of reactive variables"
        },
        "test": {
            "description": "Enable tests",
            "dependencies": [
                {
                    "name": "gtest",
                    "version>=": "1.13.0"
                }
            ]
        },
        "sandbox": {
            "description": "sandbox additional requirements",
            "dependencies": [
                {
                    "name": "nil-mono",
                    "features": [
                        "pulse"
                    ]
                },
                "opengl",
                "glfw3",
                {
                    "name": "imgui",
                    "features": [
                        "glfw-binding",
                        "opengl3-binding"
                    ],
                    "version>=": "1.89.9"
                },
                {
                    "name": "imgui-node-editor",
                    "version>=": "0.9.2"
                }
            ]
        }
    }
}