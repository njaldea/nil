{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
    "description": "Collection of libraries from nil",
    "name": "nil",
    "features": {
        "cli": {
            "description": "Simplified argument parsing (from boost::program_options)",
            "dependencies": [
                {
                    "name": "boost-program-options",
                    "version>=": "1.82.0"
                }
            ]
        },
        "pulse": {
            "description": "straight forward implementation of reactive variables"
        },
        "utils": {
            "description": "collection of common utility libraries"
        },
        "service": {
            "description": "Simplified event handling (from boost::asio)",
            "dependencies": [
                {
                    "name": "nil",
                    "features": [
                        "utils"
                    ]
                },
                {
                    "name": "boost-asio",
                    "version>=": "1.82.0"
                },
                {
                    "name": "boost-beast",
                    "version>=": "1.82.0"
                }
            ]
        },
        "gate": {
            "description": "nil-/gate js to c++",
            "dependencies": [
                {
                    "name": "nil",
                    "features": [
                        "utils"
                    ]
                }
            ]
        },
        "test": {
            "description": "Enable tests",
            "dependencies": [
                {
                    "name": "gtest",
                    "version>=": "1.13.0"
                }
            ]
        },
        "sandbox": {
            "description": "sandbox additional requirements",
            "dependencies": [
                {
                    "name": "nil",
                    "features": [
                        "cli",
                        "gate",
                        "service",
                        "pulse"
                    ]
                },
                "opengl",
                "glfw3",
                {
                    "name": "imgui",
                    "features": [
                        "glfw-binding",
                        "opengl3-binding"
                    ]
                },
                "imgui-node-editor",
                {
                    "name": "protobuf",
                    "version>=": "3.21.12"
                }
            ]
        }
    }
}