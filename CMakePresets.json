{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/.build",
            "environment": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_BUILD_PARALLEL_LEVEL": "8"
            }
        },
        {
            "name": "sandbox",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "sandbox",
                "ENABLE_FEATURE_CLI": "ON",
                "ENABLE_FEATURE_PULSE": "ON",
                "ENABLE_FEATURE_UTILS": "ON",
                "ENABLE_FEATURE_GATE": "ON",
                "ENABLE_FEATURE_SERVICE": "ON",
                "ENABLE_SANDBOX": "ON"
            }
        },
        {
            "name": "release",
            "inherits": "sandbox",
            "displayName": "release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug",
            "inherits": "sandbox",
            "displayName": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "test",
            "inherits": "debug",
            "displayName": "test",
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "$env{VCPKG_MANIFEST_FEATURES};test",
                "ENABLE_TEST": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release",
            "displayName": "release",
            "configurePreset": "release"
        },
        {
            "name": "debug",
            "displayName": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "test",
            "displayName": "test",
            "configurePreset": "test"
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "displayName": "test",
            "configurePreset": "test"
        }
    ]
}