{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/.build",
            "environment": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_BUILD_PARALLEL_LEVEL": "8",
                "VCPKG_BINARY_SOURCES": "default"
            },
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/.build/out",
                "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/triplets"
            },
            "generator": "Ninja"
        },
        {
            "name": "sandbox",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "sandbox",
                "ENABLE_FEATURE_CLI": "ON",
                "ENABLE_FEATURE_PULSE": "ON",
                "ENABLE_FEATURE_UTILS": "ON",
                "ENABLE_FEATURE_GATE": "ON",
                "ENABLE_FEATURE_SERVICE": "ON",
                "ENABLE_SANDBOX": "ON",
                "ENABLE_TEST": "OFF"
            }
        },
        {
            "name": "release",
            "inherits": "sandbox",
            "displayName": "release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug",
            "inherits": "sandbox",
            "displayName": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "test",
            "inherits": "debug",
            "displayName": "test",
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "test",
                "ENABLE_TEST": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release",
            "description": "release",
            "displayName": "release",
            "configurePreset": "release",
            "jobs": 8
        },
        {
            "name": "debug",
            "description": "debug",
            "displayName": "debug",
            "configurePreset": "debug",
            "jobs": 8
        },
        {
            "name": "test",
            "description": "test",
            "displayName": "test",
            "configurePreset": "test",
            "jobs": 8
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "displayName": "test",
            "configurePreset": "test"
        }
    ]
}